{% extends 'base.html.twig' %}

{% block title %}Chemical brothers{% endblock %}

{% block body %}
    <div class="d-flex justify-content-around align-items-center mb-4 text-center mt-4" style="height: 70vh;">
        <div class="container-form d-flex  flex-column h-50 col-4">
            {% if error %}
                <div class="color-red d-flex justify-content-center align-items-center fs-5 mb-4">
                    <span>{{ error.messageKey|trans(error.messageData, 'security') }}<span>
                </div>
            {% endif %}
            <form class="h-100 d-flex flex-column justify-content-around align-items-center" action="{{ path('app_login') }}" method="post">
                <input class="w-100 text-center py-3 rounded-pill border-blue-custom mb-4"
                       placeholder="Email"
                       type="email" id="username"
                       name="_username"
                       value="{{ last_username }}"
                       required
                >
                <input class="w-100 text-center py-3 rounded-pill border-blue-custom mb-4"
                       placeholder="Password"
                       type="password"
                       id="password"
                       name="_password"
                       required
                >

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <button class="py-3 text-center rounded-pill button-hover text-white"  type="submit">login</button>
            </form>
        </div>

        <div class="chimical-brothers d-flex flex-column justify-content-center" style="width: 30%; background-color: #5FA8BF; height: 100%; border-radius: 3%; color: white;">
            <div class="title">
                <h1>
                    Chemical brothers
                </h1>
            </div>
            <div>
                <text>
                    La solution de ficheir en ligne pour vous faciliter dans votre company
                </text>
            </div>

        </div>
    </div>
{% endblock %}
