{% extends 'base.html.twig' %}

{% block title %}Produit acheté
{% endblock %}

{% block body %}
	<link rel="stylesheet" href="{{ asset('/assets/sinan/productAssociate.css') }}">
	<div class="container">
	<br>
	<div class="dropdown show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Notifications
        </a>

        <div class="notifications dropdown-menu" aria-labelledby="dropdownMenuLink">
            {% for notifications in notificationList %}
            <div id="notification-{{ notifications.id }}" class="test">
                    <span class="dropdown-item">{{ notifications.message }}
                    <button class="vue btn btn-light" data-id={{ notifications.id }}>Vue</button></span>
                </div>
            {% endfor %}
        </div>
    </div>
	
		<div class="block-background">
			<div class="row">
				{% for product in BoughtProducts %}
					<div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
						<div class="card-bought-product">
							<img src="/upload/{{ product.image }}" class="card-img-top" alt="...">
							<div class="card-content">
								<div class="card-title">{{ product.title }}</div>
								<p class="card-description">{{ product.description }}</p>
								<div class="card-price">{{ product.price }}€</div>
								<div class="row justify-content-center">
									<a href="{{ path('app_admin_fds_download', {'id' : product.fds.id}) }}" class="btn btn-dark">Télécharger la notice</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
