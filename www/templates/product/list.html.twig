{% extends 'base.html.twig' %}

{% block title %}Liste produits{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des produits</h1>

        <div style="display: flex; background-color: #E2E2E2; width: 60vw; padding: 2em; border-radius: 15px;">
        {% set counter = 0 %}
        {% for product in prodList %}
            <div class="card" style="width: 18rem; background-color: #5FA8BF; margin-right: 10px;">
                <div class="card-body">
                    <h5 class="card-title">{{ product.title }}</h5>
                    <h5 class="card-title">{{ product.price }} €</h5>
                    <p class="card-text">{{ product.description }}</p>
                    <p class="card-text">Disponible depuis le: {{ product.createdAt|date('d/m/Y') }}</p>
                    {# <a href="{{ path('app_product_view', {'id' : product.id}) }}" class="btn btn-light">Voir le produit</a>
                    <a href="{{ path('app_product_update', {'id' : product.id}) }}" class="btn btn-light">Mettre à jour le produit</a> #}
                </div>
            </div>
            {% set counter = (counter + 1) %}
            {% if counter is same as 3 %}
                <br>
                {% set counter = 0 %}
            {% endif %}
        {% endfor %}
        </div>
    {# <a class="btn btn-light" href="{{ path('app_product_create') }}">Crée un produit</a> #}
</div>
{% endblock %}